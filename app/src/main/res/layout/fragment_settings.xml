<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        app:title="@string/settings"
        app:titleTextColor="@color/colorTextPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:elevation="@dimen/toolbar_elevation"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_item_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/primary_currency"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/colorTextPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/primaryCurrencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:buttonTint="@color/colorAccentDark"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_item_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alternate_currency"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/colorTextPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/alternateCurrencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:buttonTint="@color/colorAccentDark"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_item_height"
        android:background="@drawable/ripple_green_primary_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/colorTextPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

    </FrameLayout>

</LinearLayout>